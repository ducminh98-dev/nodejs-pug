html
    head
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
    link(rel="stylesheet" href="/assets/styles/layout.css")
    script.
        $("#back-to-top").click(function(){return $("body, html").animate({scrollTop:0},400),!1});
        $(function(){$('[data-toggle="tooltip"]').tooltip()});    
    body
        header
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                a.navbar-brand(href='/') Codex-Tokyo
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href='#')| Home
                        li.nav-item
                            a.nav-link(href='/products') Products
                        li.nav-item
                            a.nav-link(href='/cart') Cart
                            p= a   
                        if user
                            li.nav-item
                                a.nav-link(href='/login/delete') Logout
                        else
                            li.nav-item
                                a.nav-link(href='/login') Login
                if user
                    p= user.name
        block layout

        footer
            button(id="back-to-top").back-to-top back top
           
        block footter

        





